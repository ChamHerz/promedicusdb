<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">


<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.username">chambi</property>
        <property name="hibernate.connection.password">chambi</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/mydb</property>
        <property name="format_sql">false</property>
        <property name="show_sql">false</property>
        <property name="hibernate.jdbc.batch_size">20</property>
        <mapping class="promedicusdb.model.Usuario"/>
        <mapping class="promedicusdb.model.Paciente"/>
        <mapping class="promedicusdb.model.Especialidad"/>
        <mapping class="promedicusdb.model.Medico"/>
        <mapping class="promedicusdb.model.Administrador"/>
        <mapping class="promedicusdb.model.ObraSocial"/>
        <mapping class="promedicusdb.model.Secretaria"/>
        <mapping class="promedicusdb.model.Turno"/>
        <mapping class="promedicusdb.model.MedicoObraSocial"/>
        <mapping class="promedicusdb.model.MedicoSecretaria"/>
    </session-factory>
</hibernate-configuration>